{
    "extends": "@tsconfig/node10/tsconfig.json",
    "compilerOptions": {
        "target": "ES2018",
        "module": "commonjs",
        "lib": [
            "es2015",
            "es2016",
            "es2017",
            "es2018"
        ],
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "outDir": "./lib/hoobs",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "preserveConstEnums": true,
        "resolveJsonModule": true
    },
    "include": [
        "src/"
    ],
    "exclude": [
        "**/*.test.js",
        "var"
    ]
}